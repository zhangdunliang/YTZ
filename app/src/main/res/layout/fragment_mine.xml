<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/basic_background"
    android:orientation="vertical"
    tools:context=".app.fragment.MineFragment">

    <LinearLayout
        android:id="@+id/layout_lxkf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_lxkf"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mine_lxkf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/icon_lxkf"
                android:layout_toRightOf="@+id/icon_lxkf"
                android:text="在线客服"
                android:textColor="#030303"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/lxkf_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mine_group" />

                <com.fiveoneofly.cgw.app.widget.BadgeView
                    android:id="@+id/lxkf_msg_num"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

            </FrameLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="17dp"
            android:background="#dbdbdb" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_dqbb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_dqbb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_mine_dqbb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon_dqbb"
            android:layout_toRightOf="@+id/icon_dqbb"
            android:text="当前版本"
            android:textColor="#030303"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/version_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#999999"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/icon_dqbb"
            android:layout_marginTop="17dp"
            android:background="#dbdbdb" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:text="接收通知消息"
            android:textColor="#030303"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switch_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login_out"
        style="@style/ButtonNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="105dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>
