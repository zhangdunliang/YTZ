<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notice_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:singleLine="true"
            android:text="信用卡管理"
            android:textColor="@color/majorText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/notice_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notice_news_title"
            android:layout_alignTop="@+id/notice_news_title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/notice_news_title"
            android:layout_toRightOf="@+id/notice_news_title"
            android:gravity="center_vertical"
            android:text="2018-07-13 10:26"
            android:textColor="@color/minorText"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/notice_news_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notice_news_title"
            android:layout_alignStart="@+id/notice_news_title"
            android:layout_below="@+id/notice_news_title"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="亲爱的用户！您xxx资金已到帐储蓄卡，请查看请查看请查看请查看请查看请查看请查看请查看"
            android:textColor="@color/majorText"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>