<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/basic_background"
    tools:context=".app.activity.IdCardVerifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/id_card_verify_submit"
        android:layout_marginTop="33dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ic_card_verify_front"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_weight="1"
            android:background="@drawable/id_card_bg">

            <ImageView
                android:id="@+id/ic_card_verify_front_icon"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_id_card_verify" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_card_verify_front_icon"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dp"
                android:text="上传身份证正面"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ic_card_verify_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="29dp"
            android:layout_weight="1"
            android:background="@drawable/id_card_bg">

            <ImageView
                android:id="@+id/ic_card_verify_back_icon"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_id_card_verify" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_card_verify_back_icon"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dp"
                android:text="上传身份证反面"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/id_card_verify_submit"
        style="@style/ButtonNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="42dp"
        android:text="提交" />
</RelativeLayout>
