<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/moxie_mailimport_bg_white_top_corner_5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="TitleTitleTitle"
            android:textColor="#333333"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal" >

                <com.moxie.client.widget.EditTextWithClear
                    android:id="@+id/EditText_Verify_Code"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textUri"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:textColor="@color/moxie_mailimport_color_gray_2"
                    android:textColorHint="@color/moxie_mailimport_color_gray_4"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout_Verify_Place"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-1dip"
                    android:layout_weight="1" >

                    <View
                        android:layout_width="0.1dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:background="#22000000" />

                    <ImageView
                        android:id="@+id/ImageView_Verify_Code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/TextView_Verify_Loading"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/moxie_mailimport_color_gray_5"
                        android:gravity="center"
                        android:text="@string/moxie_client_email_verify_loading"
                        android:textColor="@color/moxie_mailimport_color_gray_3"
                        android:textSize="15sp"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="#888888" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView_Left_Button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/moxie_mailimport_btn_left_button_dialog"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="Left"
            android:textColor="#535353"
            android:textSize="16sp" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#888888" />

        <TextView
            android:id="@+id/TextView_Right_Button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/moxie_mailimport_btn_right_button_dialog"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="Right"
            android:textColor="#535353"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>